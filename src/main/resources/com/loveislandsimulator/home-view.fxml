<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="contentPane" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loveislandsimulator.controllers.HomeController">
   <VBox alignment="CENTER" spacing="20.0">
      <Text text="Love Island Game Show Simulator" textAlignment="CENTER">
         <font>
            <Font size="48.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </Text>
      <VBox alignment="BOTTOM_CENTER" prefWidth="1024.0" spacing="100.0">
         <children>
            <Button id="startBtn" defaultButton="true" mnemonicParsing="false" onAction="#onStartButtonClick" prefHeight="60.0" prefWidth="171.0" text="Start Game">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button id="helpBtn" mnemonicParsing="false" onAction="#onHelpButtonClick" prefHeight="48.0" prefWidth="99.0" text="Help">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </VBox>
</StackPane>
