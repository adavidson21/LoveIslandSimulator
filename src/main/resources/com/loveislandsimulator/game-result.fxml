<VBox fx:id="container" alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.loveislandsimulator.controllers.GameResultController">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Love Island Game Result">
        <font>
            <Font size="48.0"/>
        </font>
    </Text>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Winners" textAlignment="CENTER" underline="true"
          wrappingWidth="684.0480346679688" VBox.vgrow="ALWAYS">
        <font>
            <Font size="36.0"/>
        </font>
    </Text>
    <Text fx:id="firstPlace" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER"
          wrappingWidth="684.0480346679688">
        <font>
