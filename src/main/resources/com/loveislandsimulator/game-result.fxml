        </font>
    </Text>
    <Text fx:id="secondPlace" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER"
          wrappingWidth="684.0480346679688">
        <font>
            <Font size="24.0"/>
        </font>
    </Text>
    <Text fx:id="thirdPlace" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER"
          wrappingWidth="684.0480346679688">
        <font>
            <Font size="24.0"/>
        </font>
    </Text>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <Button mnemonicParsing="false" onAction="#onNewGameButtonClick" prefHeight="33.0" prefWidth="131.0"
                text="New Game"/>
        <Button mnemonicParsing="false" onAction="#onQuitButtonClick" prefHeight="33.0" prefWidth="131.0"
                text="Quit"/>
